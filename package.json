{
	"name": "b2c-documentation-tool",
	"displayName": "b2c-documentation-tool",
	"description": "Automatically generate documentation for your B2C custom policies",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:b2c-documentation-tool.run",
		"onFileSystem:xml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "b2c-documentation-tool.run",
				"title": "B2C Documentation Tool: Run"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"@types/xmldom": "^0.1.30",
		"es6-template-strings": "^2.0.1",
		"xmldom": "^0.4.0",
		"xpath": "0.0.32"
	}
}
